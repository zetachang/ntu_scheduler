.user_info.span16
  %h2 #{user.name}'s Schedule
  .fun
    - set_list = user.schedule_sets.map{|s| [s.name,s.id]} << ["Create New Set",0]
    = form_tag add_schedule_user_schedule_set_path(user,user.schedule), :remote => true, :id => 'add_to_set_form' do
      = select "set", "name", set_list, {:include_blank => false, :prompt => 'Select a schedule set to add'}, {:id => 'add_to_set_select'}
      = submit_tag "Add", :class => "btn success small"
  
  #new_set.modal.hide.fade
    .modal-header
      %a{:href => '#', :class => 'close'}x
      %h3 Create a new Schedule Set
    .modal-body
      = form_tag create_empty_user_schedule_sets_path(user,ScheduleSet.new), :remote => true, :id => 'create_new_set_form' do
        = label_tag :name, "Input Set Name:"
        .input
          = text_field_tag :name
    .modal-footer
      = submit_tag "Create", :class => "btn primary", :id => 'create_new_set_btn'